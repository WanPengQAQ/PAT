#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<stdlib.h>
#include<vector>
#include<math.h>

using namespace std;

#define MAX 100000
int N;
double P, R;
vector<int> a[MAX];

int nums = 0;
int lowLevel = 99999;

void dfs(int Root,int level)
{
	if (level > lowLevel)
		return;

	if (a[Root].size() == 0) {//æ ¹
		
		if (level < lowLevel) {
			lowLevel = level;
			nums = 1;
		}
		else if (level == lowLevel)
			nums++;
		return;
	}


	for (int i = 0; i < a[Root].size(); i++) {
		dfs(a[Root][i], level + 1);
	}

}

int main()
{
	
	

	scanf("%d%lf%lf", &N, &P, &R);

	R = R / 100;

	for (int i = 0; i < N; i++) {
		int k;
		scanf("%d", &k);

		for (int j = 0; j < k; j++) {
			int x;
			scanf("%d", &x);
			a[i].push_back(x);
		}
	}
	dfs(0, 0);
	double prs = P * pow(1 + R, lowLevel);

	printf("%.4lf %d", prs, nums);

	system("pause");
	return 0;
}
